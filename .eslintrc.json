{
    "plugins": ["prettier", "import", "@typescript-eslint"],
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-debugger": "off",
        "no-console": 0,
        "class-methods-use-this": "off",
        "@typescript-eslint/explicit-function-return-type": "off", // Если необходимо, вы можете включить строгую типизацию для ваших функций
        "@typescript-eslint/no-explicit-any": "off" // Если вы пока не хотите запрещать использование any
    }
}
